                <td>{{ annonce.createdAt ? annonce.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.telephone }}</td>
                <td>{{ annonce.email }}</td>
                <td>{{ annonce.ville }}</td>
                <td>{{ annonce.codePostal }}</td>
                <td>{{ annonce.address }}</td>
                <td>{{ annonce.quartier }}</td>
                <td>{{ annonce.marque }}</td>
                <td>{{ annonce.image }}</td>
                <td>{{ annonce.price }}</td>
                <td>
                    <a href="{{ path('admin_show', {'id': annonce.id}) }}">show</a>
                    <a href="{{ path('admin_edit', {'id': annonce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
