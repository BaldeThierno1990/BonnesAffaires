{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1>Annonces</h1>

      <div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <div class="row p-2 bg-white border rounded">
                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="{{annonce.image}}"></div>
                <div class="col-md-6 mt-1">
                    <h5>{{annonce.titre}}</h5>
                    <div class="d-flex flex-row">
                        <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>310</span>
                    </div>
                   
                    <div class="mt-1 mb-1 spec-1"><span>{{annonce.marque}}</span></div>
                    <p class="text-justify text-truncate para mb-0">{{annonce.description}}.<br><br></p>
                   <h5>Ville du vendeur:  {{annonce.ville}}</h5>
                   <h5>Adresse:           {{annonce.address}}</h5>
                   <h5>Code Postal:       {{annonce.codePostal}}</h5>
                   <h5>Quartier:         {{annonce.quartier}}</h5>
                    
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-items-center">
                        <h4 class="mr-1">GNF{{annonce.price}}</h4><span class="strike-text">$20.99</span>
                    </div>
                    <h6 class="text-success">Une bonne affaire</h6>
                   <div class="d-flex flex-column mt-4"><button class="btn btn-primary btn-sm" type="button">   <a href="{{ path('annonces_show', {'id': annonce.id}) }}">{{annonce.telephone}}</a></button><button class="btn btn-outline btn-danger btn-sm mt-2" type="button">{{annonce.email}}</button>
                  

                          <div><a class="btn btn-info" href="{{ path('annonces_edit', {'id': annonce.id}) }}">Modifier votre annonce</a></div>

                            {{ include('annonces/_delete_form.html.twig') }}
                   </div>
                </div>
            </div>
         
          
          
        </div>
    </div>
</div>
  <div> <a href="{{ path('annonces_index') }}">Retour aux annonces</a></div>
  
{% endblock %}
